@model DiseñoArquitecturaProyecto.Models.DB.Auditoria

@{
    ViewData["Title"] = "Agregar Auditoría";
}

<h2>Agregar Auditoría</h2>

<form asp-action="Agregar" method="post">
    <div class="form-group">
        <label for="detalleAuditoria">Detalle</label>
        <input type="text" id="detalleAuditoria" name="DetalleAuditoria" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="fechaAuditoria">Fecha</label>
        <input type="date" id="fechaAuditoria" name="FechaAuditoria" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="ubicacion">Ubicación</label>
        <input type="text" id="ubicacion" name="Ubicacion" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="idTransaccion">ID Transacción</label>
        <input type="number" id="idTransaccion" name="IdTransaccion" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>
