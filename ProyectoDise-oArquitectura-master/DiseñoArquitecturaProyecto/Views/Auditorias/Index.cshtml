@model IEnumerable<DiseñoArquitecturaProyecto.Models.DB.Auditoria>

@{
    ViewData["Title"] = "Lista de Auditorías";
}

<h2>Lista de Auditorías</h2>
<a asp-action="Agregar" class="btn btn-primary">Agregar Auditoría</a>

<table class="table">
    <thead>
        <tr>
            <th>ID Auditoría</th>
            <th>Detalle</th>
            <th>Fecha</th>
            <th>Ubicación</th>
            <th>ID Transacción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var auditoria in Model)
        {
            <tr>
                <td>@auditoria.IdAditoria</td>
                <td>@auditoria.DetalleAuditoria</td>
                <td>@auditoria.FechaAuditoria.ToString("dd/MM/yyyy")</td>
                <td>@auditoria.Ubicacion</td>
                <td>@auditoria.IdTransaccion</td>
            </tr>
        }
    </tbody>
</table>

